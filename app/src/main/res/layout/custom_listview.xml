            android:text="10" />

        <TextView
            android:id="@+id/id_txt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="27dp"
            android:layout_marginLeft="18dp"
            android:text="10" />

        <TextView
            android:id="@+id/id_txt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
